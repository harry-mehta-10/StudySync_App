<UserControl x:Class="StudySync.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudySync.Views"
             xmlns:converters="clr-namespace:StudySync.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:StringToColorConverter x:Key="StringToColorConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock 
                Grid.Row="0"
                Text="Statistics" 
                FontSize="24" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>

            <!-- Overview Stats -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Tasks Completion -->
                <Border 
                    Grid.Column="0"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0,0,10,0"
                    Padding="15">

                    <StackPanel>
                        <TextBlock 
                            Text="Task Completion"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>

                        <TextBlock>
                            <Run Text="{Binding Statistics.CompletedTasks, StringFormat='{}{0}'}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding Statistics.TotalTasks, StringFormat='{}{0}'}"/>
                            <Run Text=" tasks completed"/>
                        </TextBlock>

                        <ProgressBar 
                            Value="{Binding Statistics.CompletionPercentage}"
                            Maximum="100"
                            Height="10"
                            Margin="0,10,0,5"/>

                        <TextBlock 
                            Text="{Binding Statistics.CompletionPercentage, StringFormat='{0:0.0}%'}"
                            HorizontalAlignment="Right"
                            FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Today's Progress -->
                <Border 
                    Grid.Column="1"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="5,0"
                    Padding="15">

                    <StackPanel>
                        <TextBlock 
                            Text="Today's Progress"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>

                        <TextBlock>
                            <Run Text="{Binding CompletedTasksToday, StringFormat='{}{0}'}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding TotalTasksDueToday, StringFormat='{}{0}'}"/>
                            <Run Text=" tasks completed today"/>
                        </TextBlock>

                        <ProgressBar 
                            Value="{Binding TodayCompletionPercentage}"
                            Maximum="100"
                            Height="10"
                            Margin="0,10,0,5"/>

                        <TextBlock 
                            Text="{Binding TodayCompletionPercentage, StringFormat='{0:0.0}%'}"
                            HorizontalAlignment="Right"
                            FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Streak -->
                <Border 
                    Grid.Column="2"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="10,0,0,0"
                    Padding="15">

                    <StackPanel>
                        <TextBlock 
                            Text="Streaks"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Current Streak: "/>
                            <TextBlock Text="{Binding Statistics.CurrentStreak}" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text=" days"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Longest Streak: "/>
                            <TextBlock Text="{Binding Statistics.LongestStreak}" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text=" days"/>
                        </StackPanel>

                        <TextBlock 
                            Text="Complete at least one task daily to build your streak!"
                            TextWrapping="Wrap"
                            FontStyle="Italic"
                            Margin="0,10,0,0"
                            Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Subject Stats -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Row="0"
                    Text="Subject Performance" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Margin="0,0,0,10"/>

                <ItemsControl 
                    Grid.Row="1"
                    ItemsSource="{Binding SubjectStats}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border 
                                Background="White"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,0,0,10"
                                Padding="15">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Subject Color Indicator -->
                                    <Border 
                                        Grid.Column="0"
                                        Width="20"
                                        Height="20"
                                        CornerRadius="10"
                                        Background="{Binding Color, Converter={StaticResource StringToColorConverter}}"
                                        Margin="0,0,15,0"
                                        VerticalAlignment="Center"/>

                                    <!-- Subject Stats -->
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Grid.Column="0"
                                                Text="{Binding Name}"
                                                FontWeight="SemiBold"/>

                                            <TextBlock 
                                                Grid.Column="1"
                                                Text="{Binding CompletionPercentage, StringFormat='{0:0.0}%'}"
                                                FontWeight="SemiBold"/>
                                        </Grid>

                                        <ProgressBar 
                                            Grid.Row="1"
                                            Value="{Binding CompletionPercentage}"
                                            Maximum="100"
                                            Height="8"
                                            Margin="0,5"/>

                                        <TextBlock 
                                            Grid.Row="2">
                                            <Run Text="{Binding CompletedTasks}"/>
                                            <Run Text=" of "/>
                                            <Run Text="{Binding TotalTasks}"/>
                                            <Run Text=" tasks completed"/>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Daily Activity -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Row="0"
                    Text="Daily Activity (Last 14 Days)" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Margin="0,0,0,10"/>

                <Border
                    Grid.Row="1"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Area -->
                        <ItemsControl 
                            Grid.Row="0"
                            ItemsSource="{Binding DailyStats}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Bar -->
                                        <Rectangle 
                                            Grid.Row="0"
                                            Fill="{StaticResource PrimaryBrush}"
                                            RadiusX="2"
                                            RadiusY="2"
                                            Opacity="0.7"
                                            VerticalAlignment="Bottom">

                                            <Rectangle.Height>
                                                <MultiBinding Converter="{StaticResource BarHeightConverter}">
                                                    <Binding Path="CompletedTasks"/>
                                                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Grid}}"/>
                                                </MultiBinding>
                                            </Rectangle.Height>
                                        </Rectangle>

                                        <!-- Date Label -->
                                        <TextBlock 
                                            Grid.Row="1"
                                            Text="{Binding DateDisplay}"
                                            FontSize="10"
                                            HorizontalAlignment="Center"
                                            Margin="0,5,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Legend -->
                        <TextBlock 
                            Grid.Row="1"
                            Text="Each bar represents the number of tasks completed on that day."
                            FontStyle="Italic"
                            Opacity="0.7"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>